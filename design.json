{
    "designSystem": {
        "metadata": {
            "name": "Lindy AI Agent Builder",
            "version": "1.0",
            "description": "Enterprise AI workflow automation interface with warm gradient accents",
            "designLanguage": "Modern minimal with conversational warmth"
        },
        "colorPalette": {
            "primary": {
                "blue": {
                    "50": "#EBF5FF",
                    "100": "#D6EAFF",
                    "400": "#60A5FA",
                    "500": "#3B82F6",
                    "600": "#2563EB",
                    "700": "#1D4ED8",
                    "usage": "Primary actions, links, active states"
                },
                "neutral": {
                    "0": "#FFFFFF",
                    "50": "#F9FAFB",
                    "100": "#F3F4F6",
                    "200": "#E5E7EB",
                    "300": "#D1D5DB",
                    "400": "#9CA3AF",
                    "500": "#6B7280",
                    "600": "#4B5563",
                    "700": "#374151",
                    "800": "#1F2937",
                    "900": "#111827",
                    "usage": "Text hierarchy, borders, backgrounds"
                }
            },
            "gradients": {
                "warmBackground": {
                    "value": "linear-gradient(180deg, #FFF9E6 0%, #FFEFD5 50%, #FFE4CC 100%)",
                    "application": "ONLY main page background, hero sections",
                    "doNotUse": "Never on cards, buttons, or individual components"
                },
                "accentGradients": {
                    "green": {
                        "value": "linear-gradient(135deg, #10B981 0%, #059669 100%)",
                        "application": "Success states, completion indicators"
                    },
                    "blue": {
                        "value": "linear-gradient(135deg, #3B82F6 0%, #2563EB 100%)",
                        "application": "Primary CTAs, active workflow indicators"
                    },
                    "purple": {
                        "value": "linear-gradient(135deg, #8B5CF6 0%, #7C3AED 100%)",
                        "application": "AI/agent related icons and badges"
                    }
                }
            },
            "semantic": {
                "success": "#10B981",
                "warning": "#F59E0B",
                "error": "#EF4444",
                "info": "#3B82F6",
                "usage": "Status indicators, badges, alerts"
            }
        },
        "typography": {
            "fontFamilies": {
                "primary": {
                    "value": "-apple-system, BlinkMacSystemFont, 'Segoe UI', 'Inter', 'Roboto', sans-serif",
                    "usage": "All UI text"
                },
                "monospace": {
                    "value": "'SF Mono', 'Monaco', 'Courier New', monospace",
                    "usage": "Code snippets, technical identifiers"
                }
            },
            "scale": {
                "hero": {
                    "fontSize": "48px",
                    "fontWeight": "600",
                    "lineHeight": "1.2",
                    "letterSpacing": "-0.02em",
                    "color": "#111827",
                    "usage": "Main page heading 'How can I help?'"
                },
                "h1": {
                    "fontSize": "32px",
                    "fontWeight": "600",
                    "lineHeight": "1.3",
                    "color": "#111827",
                    "usage": "Section headers, modal titles"
                },
                "h2": {
                    "fontSize": "24px",
                    "fontWeight": "600",
                    "lineHeight": "1.4",
                    "color": "#1F2937",
                    "usage": "Card titles, subsection headers"
                },
                "h3": {
                    "fontSize": "18px",
                    "fontWeight": "600",
                    "lineHeight": "1.4",
                    "color": "#1F2937",
                    "usage": "Component labels, list headers"
                },
                "body": {
                    "fontSize": "15px",
                    "fontWeight": "400",
                    "lineHeight": "1.6",
                    "color": "#374151",
                    "usage": "Primary content, descriptions"
                },
                "bodySmall": {
                    "fontSize": "14px",
                    "fontWeight": "400",
                    "lineHeight": "1.5",
                    "color": "#4B5563",
                    "usage": "Secondary text, metadata"
                },
                "caption": {
                    "fontSize": "13px",
                    "fontWeight": "400",
                    "lineHeight": "1.4",
                    "color": "#6B7280",
                    "usage": "Helper text, timestamps"
                },
                "label": {
                    "fontSize": "13px",
                    "fontWeight": "500",
                    "lineHeight": "1.4",
                    "color": "#1F2937",
                    "usage": "Form labels, button text"
                }
            }
        },
        "components": {
            "cards": {
                "default": {
                    "background": "#FFFFFF",
                    "border": "1px solid #E5E7EB",
                    "borderRadius": "12px",
                    "shadow": "0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06)",
                    "padding": "20px",
                    "doNotUse": "Never apply gradients to card backgrounds"
                },
                "interactive": {
                    "background": "#FFFFFF",
                    "border": "1px solid #E5E7EB",
                    "borderRadius": "12px",
                    "shadow": "0 1px 3px 0 rgba(0, 0, 0, 0.1)",
                    "padding": "20px",
                    "transition": "all 0.2s ease",
                    "hover": {
                        "border": "1px solid #D1D5DB",
                        "shadow": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)",
                        "transform": "translateY(-1px)",
                        "doNotChange": "background color stays white"
                    }
                },
                "infoPanel": {
                    "background": "#FEF3C7",
                    "border": "1px solid #FCD34D",
                    "borderRadius": "8px",
                    "padding": "16px",
                    "usage": "Warning/info messages like in Image 3"
                }
            },
            "buttons": {
                "primary": {
                    "default": {
                        "background": "#3B82F6",
                        "color": "#FFFFFF",
                        "border": "none",
                        "borderRadius": "8px",
                        "padding": "10px 20px",
                        "fontSize": "15px",
                        "fontWeight": "500",
                        "shadow": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
                        "cursor": "pointer",
                        "transition": "all 0.15s ease"
                    },
                    "hover": {
                        "background": "#2563EB",
                        "shadow": "0 2px 4px 0 rgba(59, 130, 246, 0.3)",
                        "transform": "translateY(-1px)"
                    },
                    "active": {
                        "background": "#1D4ED8",
                        "transform": "translateY(0)"
                    },
                    "disabled": {
                        "background": "#D1D5DB",
                        "color": "#9CA3AF",
                        "cursor": "not-allowed",
                        "shadow": "none"
                    }
                },
                "secondary": {
                    "default": {
                        "background": "#FFFFFF",
                        "color": "#374151",
                        "border": "1px solid #E5E7EB",
                        "borderRadius": "8px",
                        "padding": "10px 20px",
                        "fontSize": "15px",
                        "fontWeight": "500",
                        "cursor": "pointer",
                        "transition": "all 0.15s ease"
                    },
                    "hover": {
                        "background": "#F9FAFB",
                        "border": "1px solid #D1D5DB"
                    }
                },
                "pill": {
                    "default": {
                        "background": "#FFFFFF",
                        "color": "#374151",
                        "border": "1px solid #E5E7EB",
                        "borderRadius": "20px",
                        "padding": "8px 16px",
                        "fontSize": "14px",
                        "fontWeight": "500",
                        "usage": "Tags like 'Personal website', 'Customer support email'"
                    },
                    "hover": {
                        "background": "#F3F4F6",
                        "border": "1px solid #D1D5DB"
                    }
                },
                "icon": {
                    "default": {
                        "background": "transparent",
                        "color": "#6B7280",
                        "border": "none",
                        "borderRadius": "6px",
                        "padding": "8px",
                        "width": "36px",
                        "height": "36px",
                        "display": "flex",
                        "alignItems": "center",
                        "justifyContent": "center"
                    },
                    "hover": {
                        "background": "#F3F4F6",
                        "color": "#374151"
                    }
                },
                "floating": {
                    "default": {
                        "background": "#3B82F6",
                        "color": "#FFFFFF",
                        "border": "none",
                        "borderRadius": "50%",
                        "width": "48px",
                        "height": "48px",
                        "shadow": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)",
                        "display": "flex",
                        "alignItems": "center",
                        "justifyContent": "center",
                        "usage": "Send button, action triggers"
                    },
                    "hover": {
                        "background": "#2563EB",
                        "shadow": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)",
                        "transform": "scale(1.05)"
                    }
                }
            },
            "inputs": {
                "textField": {
                    "default": {
                        "background": "#FFFFFF",
                        "color": "#111827",
                        "border": "1px solid #E5E7EB",
                        "borderRadius": "10px",
                        "padding": "12px 16px",
                        "fontSize": "15px",
                        "fontWeight": "400",
                        "placeholder": {
                            "color": "#9CA3AF"
                        }
                    },
                    "focus": {
                        "border": "1px solid #3B82F6",
                        "outline": "2px solid rgba(59, 130, 246, 0.1)",
                        "outlineOffset": "0"
                    },
                    "disabled": {
                        "background": "#F9FAFB",
                        "color": "#9CA3AF",
                        "cursor": "not-allowed"
                    }
                },
                "searchBar": {
                    "default": {
                        "background": "#F9FAFB",
                        "border": "1px solid #E5E7EB",
                        "borderRadius": "8px",
                        "padding": "8px 12px 8px 36px",
                        "fontSize": "14px",
                        "iconPosition": "left",
                        "iconColor": "#9CA3AF"
                    }
                },
                "messageInput": {
                    "default": {
                        "background": "#FFFFFF",
                        "border": "1px solid #E5E7EB",
                        "borderRadius": "12px",
                        "padding": "14px 48px 14px 16px",
                        "fontSize": "15px",
                        "minHeight": "52px",
                        "shadow": "0 1px 2px 0 rgba(0, 0, 0, 0.05)"
                    }
                }
            },
            "icons": {
                "default": {
                    "size": "20px",
                    "color": "#6B7280",
                    "strokeWidth": "1.5",
                    "usage": "Standard UI icons",
                    "doNotUse": "Never apply gradients directly to icons"
                },
                "small": {
                    "size": "16px",
                    "color": "#9CA3AF",
                    "strokeWidth": "1.5"
                },
                "large": {
                    "size": "24px",
                    "color": "#4B5563",
                    "strokeWidth": "1.5"
                },
                "badge": {
                    "container": {
                        "background": "#EBF5FF",
                        "border": "none",
                        "borderRadius": "6px",
                        "padding": "6px",
                        "width": "32px",
                        "height": "32px"
                    },
                    "icon": {
                        "size": "18px",
                        "color": "#3B82F6"
                    },
                    "usage": "Icons in pill tags, list items"
                },
                "navigation": {
                    "color": "#6B7280",
                    "size": "20px",
                    "active": {
                        "color": "#3B82F6"
                    }
                }
            },
            "lists": {
                "item": {
                    "default": {
                        "background": "transparent",
                        "padding": "10px 12px",
                        "borderRadius": "8px",
                        "gap": "12px",
                        "display": "flex",
                        "alignItems": "center"
                    },
                    "hover": {
                        "background": "#F9FAFB",
                        "cursor": "pointer"
                    },
                    "active": {
                        "background": "#EBF5FF",
                        "color": "#1D4ED8"
                    }
                },
                "divider": {
                    "border": "none",
                    "borderTop": "1px solid #E5E7EB",
                    "margin": "8px 0"
                }
            },
            "badges": {
                "default": {
                    "background": "#F3F4F6",
                    "color": "#4B5563",
                    "borderRadius": "6px",
                    "padding": "4px 10px",
                    "fontSize": "13px",
                    "fontWeight": "500"
                },
                "status": {
                    "draft": {
                        "background": "#F3F4F6",
                        "color": "#6B7280"
                    },
                    "active": {
                        "background": "#D1FAE5",
                        "color": "#065F46"
                    },
                    "inactive": {
                        "background": "#FEE2E2",
                        "color": "#991B1B"
                    }
                },
                "count": {
                    "background": "#3B82F6",
                    "color": "#FFFFFF",
                    "borderRadius": "10px",
                    "padding": "2px 6px",
                    "fontSize": "12px",
                    "fontWeight": "600",
                    "minWidth": "20px",
                    "textAlign": "center"
                }
            },
            "toggle": {
                "default": {
                    "width": "44px",
                    "height": "24px",
                    "background": "#E5E7EB",
                    "borderRadius": "12px",
                    "thumb": {
                        "width": "20px",
                        "height": "20px",
                        "background": "#FFFFFF",
                        "borderRadius": "50%",
                        "shadow": "0 1px 3px 0 rgba(0, 0, 0, 0.1)"
                    }
                },
                "checked": {
                    "background": "#3B82F6",
                    "thumb": {
                        "transform": "translateX(20px)"
                    }
                }
            },
            "modals": {
                "overlay": {
                    "background": "rgba(0, 0, 0, 0.5)",
                    "backdropFilter": "blur(2px)"
                },
                "container": {
                    "background": "#FFFFFF",
                    "borderRadius": "16px",
                    "padding": "24px",
                    "shadow": "0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)",
                    "maxWidth": "600px"
                },
                "header": {
                    "padding": "0 0 16px 0",
                    "borderBottom": "1px solid #E5E7EB",
                    "fontSize": "20px",
                    "fontWeight": "600",
                    "color": "#111827"
                }
            },
            "sidebar": {
                "default": {
                    "background": "#FFFFFF",
                    "borderRight": "1px solid #E5E7EB",
                    "width": "260px",
                    "padding": "16px"
                },
                "header": {
                    "padding": "12px 16px",
                    "borderBottom": "1px solid #E5E7EB"
                }
            },
            "chatBubbles": {
                "user": {
                    "background": "#F3F4F6",
                    "color": "#1F2937",
                    "borderRadius": "16px 16px 4px 16px",
                    "padding": "12px 16px",
                    "maxWidth": "70%",
                    "alignSelf": "flex-end"
                },
                "assistant": {
                    "background": "#FFFFFF",
                    "color": "#1F2937",
                    "border": "1px solid #E5E7EB",
                    "borderRadius": "16px 16px 16px 4px",
                    "padding": "12px 16px",
                    "maxWidth": "70%",
                    "alignSelf": "flex-start"
                }
            },
            "workflow": {
                "node": {
                    "default": {
                        "background": "#FFFFFF",
                        "border": "2px solid #E5E7EB",
                        "borderRadius": "12px",
                        "padding": "16px",
                        "minWidth": "200px",
                        "shadow": "0 1px 3px 0 rgba(0, 0, 0, 0.1)"
                    },
                    "selected": {
                        "border": "2px solid #3B82F6",
                        "shadow": "0 0 0 4px rgba(59, 130, 246, 0.1)"
                    },
                    "trigger": {
                        "iconBackground": "#FEF3C7",
                        "iconColor": "#D97706"
                    },
                    "action": {
                        "iconBackground": "#DBEAFE",
                        "iconColor": "#2563EB"
                    },
                    "condition": {
                        "iconBackground": "#F3E8FF",
                        "iconColor": "#7C3AED"
                    }
                },
                "connector": {
                    "stroke": "#D1D5DB",
                    "strokeWidth": "2px",
                    "strokeDasharray": "none",
                    "active": {
                        "stroke": "#3B82F6"
                    }
                }
            }
        },
        "spacing": {
            "scale": {
                "xs": "4px",
                "sm": "8px",
                "md": "12px",
                "lg": "16px",
                "xl": "24px",
                "2xl": "32px",
                "3xl": "48px",
                "4xl": "64px"
            },
            "componentGaps": {
                "tight": "8px",
                "default": "12px",
                "comfortable": "16px",
                "loose": "24px"
            }
        },
        "shadows": {
            "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
            "default": "0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06)",
            "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)",
            "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)",
            "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)",
            "usage": {
                "sm": "Subtle elevation (inputs, small cards)",
                "default": "Standard cards, dropdowns",
                "md": "Hover states, interactive elements",
                "lg": "Modals, popovers",
                "xl": "High-priority overlays"
            }
        },
        "animations": {
            "timing": {
                "fast": "0.15s",
                "default": "0.2s",
                "slow": "0.3s"
            },
            "easing": {
                "default": "cubic-bezier(0.4, 0, 0.2, 1)",
                "in": "cubic-bezier(0.4, 0, 1, 1)",
                "out": "cubic-bezier(0, 0, 0.2, 1)",
                "inOut": "cubic-bezier(0.4, 0, 0.2, 1)"
            },
            "transitions": {
                "hover": "all 0.15s cubic-bezier(0.4, 0, 0.2, 1)",
                "dropdown": "all 0.2s cubic-bezier(0.4, 0, 0.2, 1)",
                "modal": "all 0.3s cubic-bezier(0.4, 0, 0.2, 1)"
            }
        },
        "layout": {
            "maxWidth": {
                "content": "1200px",
                "text": "720px",
                "narrow": "480px"
            },
            "containers": {
                "page": {
                    "padding": "24px",
                    "maxWidth": "1200px",
                    "margin": "0 auto"
                },
                "section": {
                    "padding": "32px 0",
                    "gap": "24px"
                }
            }
        },
        "criticalRules": {
            "doNotApply": [
                {
                    "rule": "NEVER apply page background gradient to individual components",
                    "context": "The warm gradient (#FFF9E6 to #FFE4CC) is ONLY for full-page backgrounds"
                },
                {
                    "rule": "NEVER apply gradients to icon elements directly",
                    "context": "Gradients go on containers or badges, icons inside use solid colors"
                },
                {
                    "rule": "NEVER use colored backgrounds on card containers",
                    "context": "Cards are always white (#FFFFFF) with subtle borders and shadows"
                },
                {
                    "rule": "NEVER apply button styles to text links",
                    "context": "Text links use #3B82F6 color with no background or padding"
                },
                {
                    "rule": "NEVER use heavy shadows on text or inline elements",
                    "context": "Shadows are only for containers, cards, buttons, and elevated surfaces"
                }
            ],
            "alwaysApply": [
                {
                    "rule": "White backgrounds on all card components",
                    "context": "#FFFFFF with border #E5E7EB and subtle shadow"
                },
                {
                    "rule": "Consistent border radius hierarchy",
                    "context": "12px for cards, 8-10px for inputs, 6px for small elements"
                },
                {
                    "rule": "Icon badges have colored backgrounds, not the icons themselves",
                    "context": "Container gets background color, icon inside uses matching darker shade"
                },
                {
                    "rule": "Hover states increase shadow and may shift transform",
                    "context": "Never change background color dramatically on hover for primary surfaces"
                }
            ]
        },
        "accessibilityRequirements": {
            "colorContrast": {
                "normalText": "4.5:1 minimum",
                "largeText": "3:1 minimum",
                "uiComponents": "3:1 minimum"
            },
            "focusIndicators": {
                "outline": "2px solid #3B82F6",
                "outlineOffset": "2px",
                "usage": "All interactive elements must show focus state"
            },
            "touchTargets": {
                "minimum": "44px x 44px",
                "recommended": "48px x 48px"
            }
        }
    }
}